# Ejemplo de workflow para deployment a Netlify
# Renombrar a deploy-netlify.yml y configurar NETLIFY_AUTH_TOKEN como secret en GitHub

name: Build and Deploy to Netlify

on:
  push:
    branches:
      - main
  workflow_dispatch:

jobs:
  build:
    runs-on: ubuntu-latest
    
    steps:
    - uses: actions/checkout@v3
    
    - name: Setup .NET
      uses: actions/setup-dotnet@v3
      with:
        dotnet-version: '8.0.x'
    
    - name: Restore dependencies
      run: dotnet restore
    
    - name: Build
      run: dotnet build --configuration Release --no-restore
    
    - name: Publish
      run: dotnet publish src/Client/Client.csproj --configuration Release --output ./publish --no-build
    
    - name: Deploy to Netlify
      uses: netlify/actions/cli@master
      with:
        args: deploy --dir=./publish/wwwroot --prod
        secrets: ${{ secrets.NETLIFY_AUTH_TOKEN }}
        publish-dir: ./publish/wwwroot

