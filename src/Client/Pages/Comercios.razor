@page "/comercios"
@using Shared.Models
@using Shared.Services
@inject IComercioService ComercioService
@inject NavigationManager Navigation

<PageTitle>Comercios</PageTitle>

<h1>Gestión de Comercios</h1>

<div class="alert alert-warning">
    <strong>Nota:</strong> Esta sección es para administradores del sistema. Solo usuarios con permisos especiales pueden gestionar comercios.
</div>

<div class="mt-3 mb-3">
    <button class="btn btn-primary" @onclick="NuevoComercio">Nuevo Comercio</button>
</div>

@if (isLoading)
{
    <p>Cargando comercios...</p>
}
else if (comercios.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comercio in comercios)
            {
                <tr>
                    <td>@comercio.Nombre</td>
                    <td>@comercio.Email</td>
                    <td>@comercio.Telefono</td>
                    <td>
                        @if (comercio.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => EditarComercio(comercio.Id)">Editar</button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarComercio(comercio.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay comercios registrados. <button class="btn btn-link p-0" @onclick="NuevoComercio">Crear el primero</button>
    </div>
}

@code {
    private List<Comercio> comercios = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await CargarComercios();
    }

    private async Task CargarComercios()
    {
        isLoading = true;
        try
        {
            comercios = await ComercioService.GetAllAsync();
        }
        catch (Exception ex)
        {
            // TODO: Mostrar error al usuario
            Console.WriteLine($"Error al cargar comercios: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NuevoComercio()
    {
        Navigation.NavigateTo("/comercios/nuevo");
    }

    private void EditarComercio(Guid id)
    {
        Navigation.NavigateTo($"/comercios/{id}");
    }

    private async Task EliminarComercio(Guid id)
    {
        // TODO: Agregar confirmación
        try
        {
            await ComercioService.DeleteAsync(id);
            await CargarComercios();
        }
        catch (Exception ex)
        {
            // TODO: Mostrar error al usuario
            Console.WriteLine($"Error al eliminar comercio: {ex.Message}");
        }
    }
}

