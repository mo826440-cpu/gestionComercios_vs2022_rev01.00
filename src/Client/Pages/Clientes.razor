@page "/clientes"
@using Shared.Models
@using Shared.Services
@inject IClienteService ClienteService
@inject NavigationManager Navigation

<PageTitle>Clientes</PageTitle>

<h1>Gestión de Clientes</h1>

<div class="mt-3 mb-3">
    <button class="btn btn-primary" @onclick="NuevoCliente">Nuevo Cliente</button>
</div>

@if (isLoading)
{
    <p>Cargando clientes...</p>
}
else if (clientes.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cliente in clientes)
            {
                <tr>
                    <td>@cliente.Nombre</td>
                    <td>@cliente.Email</td>
                    <td>@cliente.Telefono</td>
                    <td>
                        @if (cliente.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => EditarCliente(cliente.Id)">Editar</button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarCliente(cliente.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay clientes registrados. <button class="btn btn-link p-0" @onclick="NuevoCliente">Crear el primero</button>
    </div>
}

@code {
    private List<Cliente> clientes = new();
    private bool isLoading = true;
    private Guid comercioId = Guid.Empty; // TODO: Obtener del usuario autenticado

    protected override async Task OnInitializedAsync()
    {
        await CargarClientes();
    }

    private async Task CargarClientes()
    {
        isLoading = true;
        try
        {
            // TODO: Obtener comercioId del usuario autenticado
            if (comercioId != Guid.Empty)
            {
                clientes = await ClienteService.GetAllAsync(comercioId);
            }
        }
        catch (Exception ex)
        {
            // TODO: Mostrar error al usuario
            Console.WriteLine($"Error al cargar clientes: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NuevoCliente()
    {
        Navigation.NavigateTo("/clientes/nuevo");
    }

    private void EditarCliente(Guid id)
    {
        Navigation.NavigateTo($"/clientes/{id}");
    }

    private async Task EliminarCliente(Guid id)
    {
        // TODO: Agregar confirmación
        try
        {
            await ClienteService.DeleteAsync(id);
            await CargarClientes();
        }
        catch (Exception ex)
        {
            // TODO: Mostrar error al usuario
            Console.WriteLine($"Error al eliminar cliente: {ex.Message}");
        }
    }
}

