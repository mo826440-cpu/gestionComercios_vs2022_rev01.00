@page "/ventas"
@using Shared.Models
@using Shared.Services
@inject IVentaService VentaService
@inject NavigationManager Navigation

<PageTitle>Ventas</PageTitle>

<h1>Gesti√≥n de Ventas</h1>

<div class="mt-3 mb-3">
    <button class="btn btn-primary" @onclick="NuevaVenta">Nueva Venta</button>
</div>

@if (isLoading)
{
    <p>Cargando ventas...</p>
}
else if (ventas.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Total</th>
                <th>Descuento</th>
                <th>Observaciones</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venta in ventas)
            {
                <tr>
                    <td>@venta.Fecha.ToString("dd/MM/yyyy HH:mm")</td>
                    <td>@venta.Total.ToString("C")</td>
                    <td>@(venta.Descuento?.ToString("C") ?? "-")</td>
                    <td>@venta.Observaciones</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => VerDetalle(venta.Id)">Ver Detalle</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay ventas registradas. <button class="btn btn-link p-0" @onclick="NuevaVenta">Crear la primera</button>
    </div>
}

@code {
    private List<Venta> ventas = new();
    private bool isLoading = true;
    private Guid comercioId = Guid.Empty; // TODO: Obtener del usuario autenticado

    protected override async Task OnInitializedAsync()
    {
        await CargarVentas();
    }

    private async Task CargarVentas()
    {
        isLoading = true;
        try
        {
            // TODO: Obtener comercioId del usuario autenticado
            if (comercioId != Guid.Empty)
            {
                ventas = await VentaService.GetAllAsync(comercioId);
            }
        }
        catch (Exception ex)
        {
            // TODO: Mostrar error al usuario
            Console.WriteLine($"Error al cargar ventas: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NuevaVenta()
    {
        Navigation.NavigateTo("/ventas/nueva");
    }

    private void VerDetalle(Guid id)
    {
        Navigation.NavigateTo($"/ventas/{id}");
    }
}

