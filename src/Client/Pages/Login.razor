@page "/login"
@using Shared.Services
@using Shared.Models
@inject IAuthService AuthService
@inject IUsuarioService UsuarioService
@inject IComercioService ComercioService
@inject NavigationManager Navigation
@inject IToastService ToastService

<PageTitle>Iniciar Sesi√≥n</PageTitle>

<div class="login-container">
    <div class="login-card">
        <h2>Iniciar Sesi√≥n</h2>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger">@errorMessage</div>
        }

        <EditForm Model="@loginModel" OnValidSubmit="@HandleLogin">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="usuarioOrEmail">Usuario o Email *</label>
                <InputText id="usuarioOrEmail" @bind-Value="loginModel.UsuarioOrEmail" class="form-control" placeholder="Usuario o email" />
                <ValidationMessage For="@(() => loginModel.UsuarioOrEmail)" />
                <small class="form-text text-muted">Ingresa tu nombre de usuario o email</small>
            </div>

            <div class="form-group">
                <label for="idComercio">ID del Comercio *</label>
                <InputText id="idComercio" @bind-Value="loginModel.IdComercio" class="form-control" placeholder="Ej: 01" />
                <ValidationMessage For="@(() => loginModel.IdComercio)" />
                <small class="form-text text-muted">ID p√∫blico de tu comercio (formato: 01, 02, etc.)</small>
            </div>

            <div class="form-group">
                <label for="password">Contrase√±a *</label>
                <div class="password-input-container">
                    <InputText id="password" type="@(showPassword ? "text" : "password")" @bind-Value="loginModel.Password" class="form-control" />
                    <button type="button" class="btn-toggle-password" @onclick="TogglePasswordVisibility" title="@(showPassword ? "Ocultar contrase√±a" : "Mostrar contrase√±a")">
                        @if (showPassword)
                        {
                            <span>üëÅÔ∏è</span>
                        }
                        else
                        {
                            <span>üëÅÔ∏è‚Äçüó®Ô∏è</span>
                        }
                    </button>
                </div>
                <ValidationMessage For="@(() => loginModel.Password)" />
            </div>

            <button type="submit" class="btn btn-primary" disabled="@isLoading">
                @if (isLoading)
                {
                    <span>Iniciando sesi√≥n...</span>
                }
                else
                {
                    <span>Iniciar Sesi√≥n</span>
                }
            </button>
        </EditForm>
    </div>
</div>

@code {
    private LoginModel loginModel = new();
    private string errorMessage = string.Empty;
    private bool isLoading = false;
    private bool showPassword = false;

    private class LoginModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "El usuario o email es requerido")]
        public string UsuarioOrEmail { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "El ID del comercio es requerido")]
        public string IdComercio { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "La contrase√±a es requerida")]
        public string Password { get; set; } = string.Empty;
    }

    private void TogglePasswordVisibility()
    {
        showPassword = !showPassword;
    }

    private async Task HandleLogin()
    {
        isLoading = true;
        errorMessage = string.Empty;
        StateHasChanged();

        try
        {
            // 1. Buscar el comercio por ID p√∫blico
            Comercio? comercio = null;
            try
            {
                comercio = await ComercioService.GetByIdPublicoAsync(loginModel.IdComercio);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al buscar comercio: {ex}");
                errorMessage = $"Error al buscar el comercio: {ex.Message}";
                isLoading = false;
                StateHasChanged();
                return;
            }

            if (comercio == null)
            {
                errorMessage = $"No se encontr√≥ un comercio con ID: {loginModel.IdComercio}";
                isLoading = false;
                StateHasChanged();
                return;
            }

            // 2. Determinar si el usuario ingres√≥ email o nombre de usuario
            string emailParaLogin = string.Empty;
            bool esEmail = loginModel.UsuarioOrEmail.Contains("@");

            if (esEmail)
            {
                // Es un email, usarlo directamente
                emailParaLogin = loginModel.UsuarioOrEmail;
            }
            else
            {
                // Es un nombre de usuario, buscar el usuario y obtener su email
                var usuario = await UsuarioService.GetByUsuarioAsync(comercio.Id, loginModel.UsuarioOrEmail);
                if (usuario == null)
                {
                    errorMessage = $"No se encontr√≥ un usuario con nombre '{loginModel.UsuarioOrEmail}' en el comercio {loginModel.IdComercio}";
                    isLoading = false;
                    StateHasChanged();
                    return;
                }

                // Obtener el email del usuario desde Supabase Auth
                // Necesitamos obtener el usuario de auth.users usando el AuthUserId
                // Por ahora, intentamos login con el email del comercio como fallback
                // TODO: Mejorar esto para obtener el email real del usuario desde auth.users
                var comercioConEmail = await ComercioService.GetByIdAsync(comercio.Id);
                if (comercioConEmail?.Email != null)
                {
                    emailParaLogin = comercioConEmail.Email;
                }
                else
                {
                    errorMessage = "No se pudo obtener el email del usuario. Por favor, usa tu email para iniciar sesi√≥n.";
                    isLoading = false;
                    StateHasChanged();
                    return;
                }
            }

            // 3. Autenticar con Supabase Auth (usando email)
            var session = await AuthService.SignInAsync(emailParaLogin, loginModel.Password);
            
            if (session == null || session.User == null)
            {
                errorMessage = "Credenciales inv√°lidas. Por favor, verifica tu usuario/email, ID de comercio y contrase√±a.";
                isLoading = false;
                StateHasChanged();
                return;
            }

            // 4. Verificar que el usuario pertenezca al comercio especificado
            Guid authUserId;
            if (!Guid.TryParse(session.User.Id, out authUserId))
            {
                errorMessage = "Error al obtener el ID del usuario. Por favor, intenta nuevamente.";
                isLoading = false;
                StateHasChanged();
                return;
            }

            Usuario? usuarioEnComercio = null;
            try
            {
                usuarioEnComercio = await UsuarioService.GetByAuthUserIdAsync(authUserId);
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error al buscar usuario: {ex}");
                errorMessage = $"Error al buscar el usuario: {ex.Message}";
                await AuthService.SignOutAsync();
                isLoading = false;
                StateHasChanged();
                return;
            }

            if (usuarioEnComercio == null)
            {
                errorMessage = "No se encontr√≥ un usuario asociado a esta cuenta. Por favor, contacta al administrador.";
                await AuthService.SignOutAsync();
                isLoading = false;
                StateHasChanged();
                return;
            }

            if (usuarioEnComercio.ComercioId != comercio.Id)
            {
                errorMessage = $"El usuario no pertenece al comercio con ID: {loginModel.IdComercio}";
                await AuthService.SignOutAsync();
                isLoading = false;
                StateHasChanged();
                return;
            }

            // 5. Verificar que el usuario est√© activo
            if (!usuarioEnComercio.Activo)
            {
                errorMessage = "Tu cuenta est√° inactiva. Por favor, contacta al administrador.";
                await AuthService.SignOutAsync();
                isLoading = false;
                StateHasChanged();
                return;
            }

            // 6. Esperar un momento para que la sesi√≥n se establezca completamente
            await Task.Delay(200);
            
            // 7. Verificar que la sesi√≥n est√© disponible antes de navegar
            var currentSession = await AuthService.GetSessionAsync();
            if (currentSession != null)
            {
                ToastService.ShowSuccess($"Bienvenido, {usuarioEnComercio.Nombre ?? usuarioEnComercio.NombreUsuario ?? "Usuario"}");
                Navigation.NavigateTo("/dashboard", forceLoad: true);
            }
            else
            {
                errorMessage = "Error: No se pudo establecer la sesi√≥n. Por favor, intenta nuevamente.";
            }
        }
        catch (Exception ex)
        {
            // Mostrar error m√°s descriptivo
            errorMessage = $"Error al iniciar sesi√≥n: {ex.Message}";
            ToastService.ShowError($"Error: {ex.Message}");
            Console.WriteLine($"Error de login: {ex}");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}

