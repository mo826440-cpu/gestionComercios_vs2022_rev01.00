@page "/productos"
@using Shared.Models
@using Shared.Services
@inject IProductoService ProductoService
@inject NavigationManager Navigation

<PageTitle>Productos</PageTitle>

<h1>Gestión de Productos</h1>

<div class="mt-3 mb-3">
    <button class="btn btn-primary" @onclick="NuevoProducto">Nuevo Producto</button>
</div>

@if (isLoading)
{
    <p>Cargando productos...</p>
}
else if (productos.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Código</th>
                <th>Precio Venta</th>
                <th>Precio Compra</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var producto in productos)
            {
                <tr>
                    <td>@producto.Nombre</td>
                    <td>@producto.Codigo</td>
                    <td>@producto.PrecioVenta.ToString("C")</td>
                    <td>@(producto.PrecioCompra?.ToString("C") ?? "-")</td>
                    <td>
                        @if (producto.Activo)
                        {
                            <span class="badge bg-success">Activo</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactivo</span>
                        }
                    </td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary" @onclick="() => EditarProducto(producto.Id)">Editar</button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="() => EliminarProducto(producto.Id)">Eliminar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">
        No hay productos registrados. <button class="btn btn-link p-0" @onclick="NuevoProducto">Crear el primero</button>
    </div>
}

@code {
    private List<Producto> productos = new();
    private bool isLoading = true;
    private Guid comercioId = Guid.Empty; // TODO: Obtener del usuario autenticado

    protected override async Task OnInitializedAsync()
    {
        await CargarProductos();
    }

    private async Task CargarProductos()
    {
        isLoading = true;
        try
        {
            // TODO: Obtener comercioId del usuario autenticado
            if (comercioId != Guid.Empty)
            {
                productos = await ProductoService.GetAllAsync(comercioId);
            }
        }
        catch (Exception ex)
        {
            // TODO: Mostrar error al usuario
            Console.WriteLine($"Error al cargar productos: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void NuevoProducto()
    {
        Navigation.NavigateTo("/productos/nuevo");
    }

    private void EditarProducto(Guid id)
    {
        Navigation.NavigateTo($"/productos/{id}");
    }

    private async Task EliminarProducto(Guid id)
    {
        // TODO: Agregar confirmación
        try
        {
            await ProductoService.DeleteAsync(id);
            await CargarProductos();
        }
        catch (Exception ex)
        {
            // TODO: Mostrar error al usuario
            Console.WriteLine($"Error al eliminar producto: {ex.Message}");
        }
    }
}

