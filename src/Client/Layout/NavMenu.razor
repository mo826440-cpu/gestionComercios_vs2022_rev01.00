@using Shared.Services
@using Client.Services
@inject IAuthService AuthService
@inject IUserContextService UserContextService
@inject NavigationManager Navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">Gestión Comercios</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>
        
        <!-- Módulo Referencias con submenú colapsable -->
        <div class="nav-item px-3">
            <div class="nav-link nav-link-parent" @onclick="ToggleReferencias" style="cursor: pointer;">
                <span class="bi bi-folder-fill-nav-menu" aria-hidden="true"></span> Referencias
                <span class="@chevronClass ms-auto" aria-hidden="true"></span>
            </div>
            @if (referenciasExpanded)
            {
                <div class="nav-submenu">
                    <NavLink class="nav-link nav-link-sub" href="categorias">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Categorías
                    </NavLink>
                    <NavLink class="nav-link nav-link-sub" href="marcas">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Marcas
                    </NavLink>
                    <NavLink class="nav-link nav-link-sub" href="proveedores">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Proveedores
                    </NavLink>
                    <NavLink class="nav-link nav-link-sub" href="clientes">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Clientes
                    </NavLink>
                    <NavLink class="nav-link nav-link-sub" href="productos">
                        <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Productos
                    </NavLink>
                </div>
            }
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="stock">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Stock
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="ventas">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Ventas
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="compras">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Compras
            </NavLink>
        </div>
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="cajas">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Cajas
            </NavLink>
        </div>
        
        @if (isAdmin)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="usuarios">
                    <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Usuarios
                </NavLink>
            </div>
        }
        
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="reportes">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Reportes
            </NavLink>
        </div>
        
        <div class="nav-item px-3 mt-auto">
            <button class="nav-link btn btn-link text-start p-0" @onclick="HandleLogout">
                <span class="bi bi-list-nested-nav-menu" aria-hidden="true"></span> Cerrar Sesión
            </button>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool referenciasExpanded = true; // Por defecto expandido
    private bool isAdmin = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private string chevronClass => referenciasExpanded ? "bi bi-chevron-down-nav-menu" : "bi bi-chevron-right-nav-menu";

    protected override async Task OnInitializedAsync()
    {
        // Verificar si el usuario es admin para mostrar/ocultar el menú Usuarios
        isAdmin = await UserContextService.IsCurrentUserAdminAsync();
        StateHasChanged();
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void ToggleReferencias()
    {
        referenciasExpanded = !referenciasExpanded;
    }

    private async Task HandleLogout()
    {
        await AuthService.SignOutAsync();
        Navigation.NavigateTo("/login");
    }
}
