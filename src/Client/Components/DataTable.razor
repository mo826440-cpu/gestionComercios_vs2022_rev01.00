@typeparam TItem

@if (Items != null && Items.Any())
{
    <div class="data-table-container">
        @if (ShowSearch)
        {
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="Buscar..." @bind="searchTerm" @bind:event="oninput" />
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        @Header
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in FilteredItems)
                    {
                        @Row(item)
                    }
                </tbody>
            </table>
        </div>

        @if (ShowPagination)
        {
            <nav aria-label="Navegación de páginas">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link" @onclick="() => ChangePage(CurrentPage - 1)">Anterior</a>
                    </li>
                    @for (int i = 1; i <= TotalPages; i++)
                    {
                        <li class="page-item @(i == CurrentPage ? "active" : "")">
                            <a class="page-link" @onclick="() => ChangePage(i)">@i</a>
                        </li>
                    }
                    <li class="page-item @(CurrentPage == TotalPages ? "disabled" : "")">
                        <a class="page-link" @onclick="() => ChangePage(CurrentPage + 1)">Siguiente</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
}
else
{
    <div class="alert alert-info">
        @EmptyMessage
    </div>
}

@code {
    [Parameter] public IEnumerable<TItem>? Items { get; set; }
    [Parameter] public RenderFragment Header { get; set; } = default!;
    [Parameter] public RenderFragment<TItem> Row { get; set; } = default!;
    [Parameter] public bool ShowSearch { get; set; } = false;
    [Parameter] public bool ShowPagination { get; set; } = false;
    [Parameter] public int PageSize { get; set; } = 10;
    [Parameter] public string EmptyMessage { get; set; } = "No hay datos para mostrar.";
    [Parameter] public Func<TItem, string>? SearchFilter { get; set; }

    private string searchTerm = string.Empty;
    private int currentPage = 1;

    private int CurrentPage
    {
        get => currentPage;
        set
        {
            currentPage = value;
            StateHasChanged();
        }
    }

    private IEnumerable<TItem> FilteredItems
    {
        get
        {
            var filtered = Items ?? Enumerable.Empty<TItem>();

            // Aplicar filtro de búsqueda
            if (ShowSearch && !string.IsNullOrWhiteSpace(searchTerm) && SearchFilter != null)
            {
                filtered = filtered.Where(item => SearchFilter(item).Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
            }

            // Aplicar paginación
            if (ShowPagination)
            {
                filtered = filtered.Skip((CurrentPage - 1) * PageSize).Take(PageSize);
            }

            return filtered;
        }
    }

    private int TotalPages
    {
        get
        {
            if (Items == null || !Items.Any()) return 0;
            
            var filtered = Items;
            if (ShowSearch && !string.IsNullOrWhiteSpace(searchTerm) && SearchFilter != null)
            {
                filtered = filtered.Where(item => SearchFilter(item).Contains(searchTerm, StringComparison.OrdinalIgnoreCase));
            }
            
            return (int)Math.Ceiling(filtered.Count() / (double)PageSize);
        }
    }

    private void ChangePage(int page)
    {
        if (page >= 1 && page <= TotalPages)
        {
            CurrentPage = page;
        }
    }
}

